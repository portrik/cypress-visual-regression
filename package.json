{
    "name": "cypress-visual-regression",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "typescript": "tsc",
        "lint": "eslint src/",
        "start": "vite",
        "build": "tsc && vite build",
        "cypress": "cypress open --env visualRegressionFailSilently=true",
        "test:visual-regression": "exec docker compose -f docker/regression.compose.yaml up --exit-code-from regression",
        "test:generate-visual-regression": "exec docker compose -f docker/base.compose.yaml up --exit-code-from base",
        "cypress:run:base": "cypress run --env visualRegressionType=base",
        "cypress:run:regression": "cypress run --env visualRegressionType=regression",
        "docker:base": "start-server-and-test 'pnpm start' http://localhost:8080 'pnpm cypress:run:base'",
        "docker:regression": "start-server-and-test 'pnpm start' http://localhost:8080 'pnpm cypress:run:regression'",
        "preinstall": "npx only-allow pnpm"
    },
    "author": "Patrik Dvořáček <patrik@dvoracek.dev>",
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.61",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "@vitejs/plugin-react-swc": "^3.6.0",
        "autoprefixer": "^10.4.18",
        "cypress": "^13.6.6",
        "cypress-visual-regression": "^5.0.0",
        "eslint": "^8.57.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-sonarjs": "^0.24.0",
        "eslint-plugin-unicorn": "^51.0.1",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "prettier-eslint": "^16.3.0",
        "start-server-and-test": "^2.0.3",
        "typescript": "^5.3.3",
        "typescript-plugin-css-modules": "^5.1.0",
        "vite": "^5.1.4",
        "vite-tsconfig-paths": "^4.3.1"
    },
    "dependencies": {
        "@fontsource/comic-neue": "^5.0.8",
        "eslint-config-hardcore": "^45.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.22.2"
    }
}
